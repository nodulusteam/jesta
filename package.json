{
  "name": "jesta",
  "version": "2.0.9",
  "description": "",
  "main": "index.js",
  "scripts": {
    "patch": "npm version patch",
    "test": "npm run build && npm run test:coverage",
    "build": "tsc",
    "selenium": "webdriver-manager update && webdriver-manager start --detach",
    "test:coverage": "nyc --reporter=lcov --reporter=html npm run test:unit && nyc report",
    "test:unit": "npm run selenium & npm run test:jest && npm run test:cucumber && npm run test:jest-nightwatch && npm run test:cucumber-nightwatch && webdriver-manager shutdown",
    "test:jest": "jest -i jest.spec",
    "setup": "node ./tests/nightwatch/server.js",
    "test:cucumber": "cucumber-js ./tests/cucumber.feature --require ./tests/cucumber.spec.js",
    "test:jest-nightwatch": "jest -i jest-nightwatch.spec",
    "test:cucumber-nightwatch": "cucumber-js ./tests/cucumber-nightwatch.feature --require ./tests/cucumber-nightwatch.spec.js"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "/.*\\.spec.(ts)?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "coverageDirectory": "<rootDir>/coverage/",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "/*.{ts,tsx}",
      "!src/index.ts",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cucumber": "^5.0.2",
    "jest": "^23.6.0",
    "jest-cucumber": "^1.0.11",
    "nightwatch": "^1.0.11",
    "nightwatch-api": "^1.0.0",
    "ts-jest": "^23.10.4",
    "webdriver-manager": "^12.1.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.1",
    "chromedriver": "^2.43.1",
    "nyc": "^13.1.0",
    "selenium-server-standalone-jar": "^3.14.0",
    "start-server-and-test": "^1.7.9",
    "typescript": "^3.1.5"
  }
}
